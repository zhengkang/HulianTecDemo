<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bj"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:background="@drawable/db"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t_h">
        <TextView
            android:id="@+id/title"
            android:text=""
            style="@style/MainTitleStyle"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/back"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/fh"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/delete"
            android:layout_width="100dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/shanchu"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/yhm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xt_k"
                android:background="@drawable/dianniu"
                android:layout_marginTop="1dp">
                <TextView
                    android:focusable="false"
                    android:text="用户名"
                    style="@style/MainTitleStyle"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xt_k" />
                <ImageView
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xt_k"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/youceanniu"/>
                <TextView
                    android:id="@+id/text_yhm"
                    android:focusable="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:text=""
                    android:singleLine="true"
                    style="@style/MainTitleStyle"
                    android:gravity="center"
                    android:layout_marginLeft="180dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xt_k" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bdid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xt_k"
                android:background="@drawable/dianniu"
                android:layout_marginTop="1dp">
                <TextView
                    android:focusable="false"
                    android:text="北斗ID"
                    style="@style/MainTitleStyle"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xt_k" />
                <ImageView
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xt_k"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/youceanniu"/>
                <TextView
                    android:id="@+id/text_bdid"
                    android:focusable="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:text=""
                    android:singleLine="true"
                    style="@style/MainTitleStyle"
                    android:gravity="center"
                    android:layout_marginLeft="180dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xt_k" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/dw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xt_k"
                android:background="@drawable/dianniu"
                android:layout_marginTop="1dp">
                <TextView
                    android:focusable="false"
                    android:text="用户单位"
                    style="@style/MainTitleStyle"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xt_k" />
                <ImageView
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xt_k"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/youceanniu"/>
                <TextView
                    android:id="@+id/text_dw"
                    android:focusable="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:text=""
                    style="@style/MainTitleStyle"
                    android:gravity="center"
                    android:layout_marginLeft="180dp"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xt_k" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bz"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xt_k"
                android:background="@drawable/dianniu"
                android:layout_marginTop="1dp">
                <TextView
                    android:focusable="false"
                    android:text="备注"
                    style="@style/MainTitleStyle"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xt_k" />
                <ImageView
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xt_k"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/youceanniu"/>
                <TextView
                    android:id="@+id/text_bz"
                    android:focusable="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:text=""
                    style="@style/MainTitleStyle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginLeft="180dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xt_k" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
